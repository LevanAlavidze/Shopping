<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileEditSellerActivity">

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:background="@drawable/shape_rect01">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_white"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"/>

        <ImageButton
            android:id="@+id/gpsBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_gps_white"
            android:layout_alignParentEnd="true"
            android:background="@null"/>
    </RelativeLayout>
    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/profileIv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/toolbarRl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:c_border_color="@color/colorPrimary"
        app:c_border_width="1dp"
        app:c_border="true"
        android:src="@drawable/ic_person_gray"/>

    <EditText
        android:id="@+id/nameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileIv"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_rect02"
        android:drawableStart="@drawable/ic_person_gray"
        android:drawablePadding="5dp"
        android:hint="Full Name"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/my_hint_color"
        android:inputType="textPersonName|textCapWords"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/shopNameEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEt"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_rect02"
        android:drawableStart="@drawable/ic_store_gray"
        android:drawablePadding="5dp"
        android:hint="Shop Name"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/my_hint_color"
        android:inputType="textPersonName|textCapWords"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/phoneEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopNameEt"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_rect02"
        android:drawableStart="@drawable/ic_person_gray"
        android:drawablePadding="5dp"
        android:hint="Phone"
        android:textColorHint="@color/my_hint_color"
        android:textColor="@color/colorPrimary"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/deliveryFeeEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneEt"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_rect02"
        android:drawableStart="@drawable/ic_shipping_gray"
        android:drawablePadding="5dp"
        android:hint="Delivery Fee"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/my_hint_color"
        android:inputType="numberDecimal"
        android:padding="10dp"/>

    <LinearLayout
        android:id="@+id/addressLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deliveryFeeEt"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/countryEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_rect02"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_location_gray"
            android:drawablePadding="5dp"
            android:hint="Country"
            android:textColor="@color/colorPrimary"
            android:inputType="textPostalAddress"
            android:textColorHint="@color/my_hint_color"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/cityEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_rect02"
            android:drawableStart="@drawable/ic_location_gray"
            android:drawablePadding="5dp"
            android:hint="City"
            android:textColor="@color/colorPrimary"
            android:inputType="textPostalAddress"
            android:textColorHint="@color/my_hint_color"
            android:padding="10dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/addressEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressLl"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_rect02"
        android:drawableStart="@drawable/ic_location_gray"
        android:drawablePadding="5dp"
        android:hint="Address"
        android:inputType="textPostalAddress|textMultiLine"
        android:textColorHint="@color/my_hint_color"
        android:textColor="@color/colorPrimary"
        android:padding="10dp"/>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/shopOpenSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressEt"
        android:layout_margin="5dp"
        android:text="Shop Open"
        android:textColor="@color/colorPrimary"/>

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_below="@id/shopOpenSwitch"
        android:text="Update"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>